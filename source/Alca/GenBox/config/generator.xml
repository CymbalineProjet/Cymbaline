<?xml version="1.0" encoding="UTF-8"?>
<routes>
    
    <route name="generator" path="/generator" 
           template="Alca/GenBox/template/index" controller="Alca/GenBox/Defaut" action="index" />

    <route name="generator_edit" path="/generator/edit" 
           template="Alca/GenBox/template/edit-parameters" controller="Alca/GenBox/Defaut" action="edit" />  
    
    <route name="generator_code" path="/generator/component/codex" 
           template="Alca/GenBox/template/coding" controller="Alca/GenBox/Defaut" action="code" />  
    
    <route name="generator_route" path="/generator/component/route" 
           template="Alca/GenBox/template/routing" controller="Alca/GenBox/Defaut" action="route" /> 
	
    <route name="generator_todo" path="/generator/todo" 
           template="Alca/GenBox/template/todo/index" controller="Alca/GenBox/Todo" action="todo" /> 
    
    <route name="generator_close_todo" path="/generator/todo/close/int@id" 
           template="Alca/GenBox/template/todo/close" controller="Alca/GenBox/Todo" action="close" />  
    
    <route name="generator_delete_todo" path="/generator/todo/delete/int@id" 
           template="Alca/GenBox/template/todo/delete" controller="Alca/GenBox/Todo" action="delete" /> 
    
    <route name="generator_open_todo" path="/generator/todo/open/int@id" 
           template="Alca/GenBox/template/todo/open" controller="Alca/GenBox/Todo" action="open" /> 
    
    <route name="generator_new_todo" path="/generator/todo/new" 
           template="Alca/GenBox/template/todo/new" controller="Alca/GenBox/Todo" action="new" />   		   

</routes>
